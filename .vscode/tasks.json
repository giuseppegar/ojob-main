            "type": "shell",
            "command": "flutter",
            "args": ["config", "--enable-windows-desktop"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
